{
  "name": "e-commerce",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/e-commerce/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/e-commerce",
        "index": "apps/e-commerce/src/index.html",
        "main": "apps/e-commerce/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/e-commerce/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/e-commerce/public",
            "output": "."
          }
        ],
        "styles": [
          "apps/e-commerce/src/styles.css"
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/e-commerce/webpack.config.js"
        },
        "commonChunk": false
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/e-commerce/webpack.prod.config.js"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "e-commerce:build:production"
        },
        "development": {
          "buildTarget": "e-commerce:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 5200,
        "publicHost": "http://localhost:5200"
      }
    },
    "extract-i18n": {
      "executor": "ngx-build-plus:extract-i18n",
      "options": {
        "buildTarget": "e-commerce:build",
        "extraWebpackConfig": "apps/e-commerce/webpack.config.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/e-commerce/jest.config.ts"
      }
    }
  }
}
